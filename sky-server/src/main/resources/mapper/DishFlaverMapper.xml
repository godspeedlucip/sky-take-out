<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlaverMapper">
    <insert id="addBatch">
        insert into dish_flavor (dish_id, name, value)
        values
        <foreach collection="dishFlavor" item="flaver" separator=",">
             (#{flaver.dishId}, #{flaver.name}, #{flaver.value})
        </foreach>
    </insert>

    <delete id="deleteBatch">
        delete from dish_flavor
        <where>
            dish_id in
            <foreach collection="dishIds" item="dishId" open="(" close=")" separator=",">
                #{dishId}
            </foreach>
        </where>
    </delete>

    <select id="getByDishId" resultType="com.sky.entity.DishFlavor">
        select * from dish_flavor
        <where>
            dish_id=#{dishId}
        </where>
    </select>

